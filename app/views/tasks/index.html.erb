<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Due date</th>
    <th>Notes</th>
    <th>Proyect</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.description %></td>
    <td><%=h task.due_date %></td>
    <td><%=h task.notes %></td>
    <td><%=h task.proyect.name %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

